{{> delivery/header }}

<div class="container mt-4">
    <h2>Mi Perfil</h2>
    
    <form method="POST" enctype="multipart/form-data">
        <div class="row">
            <div class="col-md-4 mb-3">
                <div class="text-center">
                    <img src="{{usuario.foto}}" class="rounded-circle img-thumbnail" width="200" alt="Foto de perfil">
                    <div class="mt-3">
                        <input type="file" class="form-control" name="foto" accept="image/*">
                    </div>
                </div>
            </div>
            
            <div class="col-md-8">
                <div class="mb-3">
                    <label for="nombre" class="form-label">Nombre</label>
                    <input type="text" class="form-control" id="nombre" name="nombre" value="{{usuario.nombre}}" required>
                </div>
                
                <div class="mb-3">
                    <label for="apellido" class="form-label">Apellido</label>
                    <input type="text" class="form-control" id="apellido" name="apellido" value="{{usuario.apellido}}" required>
                </div>
                
                <div class="mb-3">
                    <label for="telefono" class="form-label">Tel√©fono</label>
                    <input type="tel" class="form-control" id="telefono" name="telefono" value="{{usuario.telefono}}" required>
                </div>
                
                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <a href="/delivery" class="btn btn-secondary me-md-2">Volver</a>
                    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                </div>
            </div>
        </div>
    </form>
</div>

{{> delivery/footer }}