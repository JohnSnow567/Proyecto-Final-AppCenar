<div class="container mt-4">
  <div class="row">
    <div class="col-md-4">
      <div class="card mb-4">
        <div class="card-header">
          <h4 class="mb-0">Mi Perfil</h4>
        </div>
        <div class="card-body text-center">
          <img src="{{#if usuario.foto}}{{usuario.foto}}{{else}}/img/default-delivery.png{{/if}}" 
               class="rounded-circle mb-3" width="150" alt="Foto de perfil">
          <h5>{{usuario.nombre}} {{usuario.apellido}}</h5>
          <p class="text-muted">Repartidor</p>
          <p class="text-muted">{{usuario.usuario}}</p>
        </div>
      </div>
    </div>

    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h4 class="mb-0">Editar Perfil</h4>
        </div>
        <div class="card-body">
          {{#if error}}
          <div class="alert alert-danger">{{error}}</div>
          {{/if}}
          {{#if success}}
          <div class="alert alert-success">{{success}}</div>
          {{/if}}

          <form action="/delivery/perfil" method="POST" enctype="multipart/form-data">
            <div class="form-row">
              <div class="form-group col-md-6">
                <label for="nombre">Nombre</label>
                <input type="text" class="form-control" id="nombre" name="nombre" 
                       value="{{usuario.nombre}}" required>
              </div>
              <div class="form-group col-md-6">
                <label for="apellido">Apellido</label>
                <input type="text" class="form-control" id="apellido" name="apellido" 
                       value="{{usuario.apellido}}" required>
              </div>
            </div>

            <div class="form-group">
              <label for="telefono">Teléfono</label>
              <input type="tel" class="form-control" id="telefono" name="telefono" 
                     value="{{usuario.telefono}}" required>
            </div>

            <div class="form-group">
              <label for="foto">Foto de perfil</label>
              <div class="custom-file">
                <input type="file" class="custom-file-input" id="foto" name="foto">
                <label class="custom-file-label" for="foto">Elegir archivo</label>
              </div>
            </div>

            <hr>

            <h5 class="mb-3">Cambiar Contraseña</h5>
            <div class="form-group">
              <label for="password">Nueva Contraseña</label>
              <input type="password" class="form-control" id="password" name="password">
            </div>
            <div class="form-group">
              <label for="confirmPassword">Confirmar Contraseña</label>
              <input type="password" class="form-control" id="confirmPassword" name="confirmPassword">
            </div>

            <button type="submit" class="btn btn-primary">
              <i class="fas fa-save mr-2"></i> Guardar Cambios
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  // Mostrar nombre de archivo seleccionado
  document.querySelector('.custom-file-input').addEventListener('change', function(e) {
    const fileName = e.target.files[0] ? e.target.files[0].name : "Elegir archivo";
    this.nextElementSibling.textContent = fileName;
  });
</script>