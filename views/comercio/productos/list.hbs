<div class="container mt-4">
  <h1>Mantenimiento de Productos</h1>
  
  <div class="mb-3">
    <a href="/comercio/productos/create" class="btn btn-primary">Crear Producto</a>
    <a href="/comercio/home" class="btn btn-secondary float-end">Volver al Home</a>
  </div>
  
  {{#if productos.length}}
    <table class="table table-bordered">
      <thead class="table-dark">
        <tr>
          <th>Nombre</th>
          <th>Imagen</th>
          <th>Descripción</th>
          <th>Categoría</th>
          <th>Precio</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        {{#each productos}}
          <tr>
            <td>{{this.dataValues.nombre}}</td>
            <td><img src="/images/uploads/productos/{{this.dataValues.imagen}}" alt="Producto" width="150"></td>
            <td>{{this.dataValues.descripcion}}</td>
            <td>{{this.categoria.dataValues.nombre}}</td>
            <td>{{this.dataValues.precio}}</td>
            <td>
              <a href="/comercio/productos/edit/{{this.dataValues.id}}" class="btn btn-warning btn-sm">Editar</a>
              <form action="/comercio/productos/delete/{{this.dataValues.id}}" method="POST" style="display:inline;" onsubmit="return confirm('¿Está seguro que desea eliminar este producto?')">
                <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
              </form>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  {{else}}
    <p>No se han creado productos.</p>
  {{/if}}
</div>
