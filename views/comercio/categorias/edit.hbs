<div class="container mt-4">
  <h1>Editar Categoría</h1>

  {{#if error}}
    <div class="alert alert-danger">{{error}}</div>
  {{/if}}

  <form action="/comercio/categorias/edit/{{categoria.dataValues.id}}" method="POST">
    <div class="mb-3">
      <label>Nombre de la Categoría</label>
      <input type="text" name="nombre" class="form-control" value="{{categoria.dataValues.nombre}}" required>
    </div>
    <div class="mb-3">
      <label>Descripción</label>
      <input type="text" name="descripcion" class="form-control" value="{{categoria.dataValues.descripcion}}" required>
    </div>
    <div class="d-flex gap-2">
      <a href="/comercio/categorias" class="btn btn-secondary">Volver</a>
      <button type="submit" class="btn btn-success">Guardar Cambios</button>
    </div>
  </form>
</div>
