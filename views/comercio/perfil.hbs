<div class="container mt-4">
  <h1>Mi Perfil</h1>

  {{#if error}}
    <div class="alert alert-danger">{{error}}</div>
  {{/if}}

  <form action="/comercio/perfil" method="POST" enctype="multipart/form-data">
    <div class="mb-3">
      <label>Logo del Comercio (opcional)</label><br>
      {{#if comercio.dataValues.logo}}
        <img src="/images/uploads/logos/{{comercio.dataValues.logo}}" alt="Logo" style="max-width: 150px;"><br>
      {{/if}}
      <input type="file" name="logo" class="form-control">
    </div>
    <div class="mb-3">
      <label>Hora de Apertura</label>
      <input type="time" name="hora_apertura" class="form-control" value="{{comercio.dataValues.hora_apertura}}" required>
    </div>
    <div class="mb-3">
      <label>Hora de Cierre</label>
      <input type="time" name="hora_cierre" class="form-control" value="{{comercio.dataValues.hora_cierre}}" required>
    </div>
    <div class="mb-3">
      <label>Tel√©fono</label>
      <input type="text" name="telefono" class="form-control" value="{{comercio.dataValues.telefono}}" required>
    </div>
    <div class="mb-3">
      <label>Correo</label>
      <input type="email" name="correo" class="form-control" value="{{usuario.dataValues.correo}}" required>
    </div>
    <div class="d-flex gap-2">
      <a href="/comercio/home" class="btn btn-secondary">Volver</a>
      <button type="submit" class="btn btn-primary">Guardar</button>
    </div>
  </form>
</div>
