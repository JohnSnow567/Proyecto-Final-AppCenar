<div class="container mt-4">
  <h1>Editar Configuraci√≥n</h1>

  {{#if error}}
    <div class="alert alert-danger">{{error}}</div>
  {{/if}}

  <form method="POST" action="/admin/configuracion/edit">
    <div class="form-group mb-3">
      <label for="itbis">ITBIS (%)</label>
      <input type="number" step="0.01" min="0" class="form-control" name="itbis" value="{{config.dataValues.itbis}}" required>
    </div>

    <div class="d-flex gap-2">
      <a href="/admin/configuracion" class="btn btn-secondary">Volver</a>
      <button type="submit" class="btn btn-success">Guardar</button>
    </div>
  </form>
</div>
