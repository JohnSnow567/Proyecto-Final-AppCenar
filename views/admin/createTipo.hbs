<div class="container mt-4">
  <h1>Crear Tipo de Comercio</h1>

  {{#if error}}
    <div class="alert alert-danger">{{error}}</div>
  {{/if}}

  <form action="/admin/tipos/create" method="POST" enctype="multipart/form-data">
    <div class="form-group mb-2">
      <label>Nombre del Tipo</label>
      <input type="text" name="nombre" class="form-control" required>
    </div>
    <div class="form-group mb-2">
      <label>Descripci√≥n</label>
      <input type="text" name="descripcion" class="form-control" required>
    </div>
    <div class="form-group mb-3">
      <label>Icono</label>
      <input type="file" name="icono" class="form-control" required>
    </div>

    <div class="d-flex gap-2">
      <a href="/admin/tipos" class="btn btn-secondary">Volver</a>
      <button type="submit" class="btn btn-success">Crear</button>
    </div>
  </form>
</div>
