<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2>{{tipoComercio.nombre}}</h2>
    <a href="/cliente/home" class="btn btn-secondary">
      <i class="fas fa-arrow-left mr-2"></i> Volver a tipos
    </a>
  </div>

  <!-- Buscador -->
  <div class="card mb-4">
    <div class="card-body">
      <form action="/cliente/comercios" method="GET">
        <input type="hidden" name="tipo" value="{{tipoComercio.id}}">
        <div class="input-group">
          <input type="text" class="form-control" name="search" placeholder="Buscar comercios..." value="{{search}}">
          <div class="input-group-append">
            <button class="btn btn-primary" type="submit">
              <i class="fas fa-search"></i> Buscar
            </button>
          </div>
        </div>
      </form>
    </div>
  </div>

  <!-- Contador de resultados -->
  <div class="mb-3">
    <h5>{{comercios.length}} {{#if (eq comercios.length 1)}}comercio{{else}}comercios{{/if}} encontrados</h5>
  </div>

  <!-- Listado de comercios -->
  {{#if comercios.length}}
    <div class="row">
      {{#each comercios}}
      <div class="col-md-4 mb-4">
        <div class="card h-100">
          <img src="/images/uploads/logos/{{logo}}" class="card-img-top" alt="{{nombre_comercio}}" style="height: 180px; object-fit: cover;">
          <div class="card-body">
            <h5 class="card-title">{{nombre_comercio}}</h5>
            <p class="card-text text-muted small">{{descripcion}}</p>
          </div>
          <div class="card-footer bg-white d-flex justify-content-between">
            <a href="/cliente/catalogo?id_comercio={{id}}" class="btn btn-sm btn-primary">
              <i class="fas fa-store mr-1"></i> Ver catálogo
            </a>
            <form action="/cliente/favoritos/{{id}}/agregar" method="POST" class="d-inline">
              <button type="submit" class="btn btn-sm btn-outline-danger">
                <i class="fas fa-heart"></i> Favorito
              </button>
            </form>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  {{else}}
    <div class="alert alert-info">
      No se encontraron comercios. Intenta con otro término de búsqueda.
    </div>
  {{/if}}
</div>