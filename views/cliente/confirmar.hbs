<div class="container mt-4">
  <div class="row">
    <div class="col-md-8">
      <div class="card mb-4">
        <div class="card-header">
          <h4>Confirmar Pedido</h4>
        </div>
        <div class="card-body">
          <h5>Resumen del Pedido</h5>
          <ul class="list-group mb-3">
            {{#each carrito}}
            <li class="list-group-item d-flex justify-content-between">
              <span>{{producto.nombre}} x {{cantidad}}</span>
              <span>RD$ {{subtotal}}</span>
            </li>
            {{/each}}
          </ul>
          <div class="text-right">
            <p>Subtotal: RD$ {{totales.subtotal}}</p>
            <p>ITBIS (18%): RD$ {{totales.itbis}}</p>
            <h5>Total: RD$ {{totales.total}}</h5>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card">
        <div class="card-header">
          <h5>Información de Entrega</h5>
        </div>
        <div class="card-body">
          <form action="/pedidos/confirmar" method="POST">
            <input type="hidden" name="itbisPercent" value="{{itbisPercent}}">
            <input type="hidden" name="total" value="{{totales.total}}">
            <div class="form-group">
              <label>Dirección de Entrega</label>
              <select class="form-control" name="direccionId" required>
                {{#each direcciones}}
                <option value="{{id}}">{{nombre}} - {{descripcion}}</option>
                {{else}}
                <option disabled>No tienes direcciones. ¡Crea una!</option>
                {{/each}}
              </select>
            </div>
            <div class="form-group">
              <label>Notas para el repartidor</label>
              <textarea class="form-control" name="notas" rows="3"></textarea>
            </div>
            <button type="submit" class="btn btn-success btn-block">Confirmar Pedido</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>