{{> header title="Mis Direcciones" }}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Mis Direcciones</h2>
        <a href="/cliente/direcciones/nueva" class="btn btn-primary">
            <i class="fas fa-plus"></i> Nueva Direcci√≥n
        </a>
    </div>

    {{#if direcciones.length}}
    <div class="row">
        {{#each direcciones}}
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">{{this.nombre}}</h5>
                    <p class="card-text">{{this.descripcion}}</p>
                    <div class="d-flex justify-content-end">
                        <a href="/cliente/direcciones/{{this.id}}/editar" class="btn btn-sm btn-outline-primary me-2">
                            <i class="fas fa-edit"></i> Editar
                        </a>
                        <form action="/cliente/direcciones/{{this.id}}/eliminar" method="POST" class="d-inline">
                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                <i class="fas fa-trash"></i> Eliminar
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
    {{else}}
    <div class="alert alert-info">
        No tienes direcciones registradas.
    </div>
    {{/if}}
</div>

{{> footer }}