<div class="container mt-4">
    <h2>Mi Carrito</h2>
    
    {{#if carrito.length}}
        <div class="row">
            <div class="col-md-8">
                <div class="card mb-4">
                    <div class="card-body">
                        <ul class="list-group">
                            {{#each carrito}}
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <div class="d-flex align-items-center">
                                    <img src="{{producto.imagen}}" width="50" class="mr-3">
                                    <div>
                                        <h6>{{producto.nombre}}</h6>
                                        <small>RD$ {{producto.precio}} c/u</small>
                                    </div>
                                </div>
                                <div>
                                    <span class="badge badge-primary badge-pill">{{cantidad}}</span>
                                    <form action="/cliente/carrito/remover/{{producto.id}}" method="POST" class="d-inline ml-2">
                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </li>
                            {{/each}}
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        <h5>Resumen</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-2">
                            <span>Subtotal:</span>
                            <span>RD$ {{subtotal}}</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>ITBIS (18%):</span>
                            <span>RD$ {{itbis}}</span>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between font-weight-bold h5">
                            <span>Total:</span>
                            <span>RD$ {{total}}</span>
                        </div>
                        <a href="/cliente/confirmar-pedido" class="btn btn-success btn-block mt-3">
                            Continuar
                        </a>
                    </div>
                </div>
            </div>
        </div>
    {{else}}
        <div class="alert alert-info">
            Tu carrito está vacío. <a href="/cliente/catalogo">¡Agrega productos!</a>
        </div>
    {{/if}}
</div>