{{> header title=comercio.nombre_comercio }}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>{{comercio.nombre_comercio}}</h2>
                <form action="/cliente/favoritos/{{comercio.id}}/agregar" method="POST">
                    <button type="submit" class="btn btn-outline-danger">
                        <i class="far fa-heart"></i> Favorito
                    </button>
                </form>
            </div>

            {{#each comercio.categorias}}
            <div class="mb-5">
                <h4 class="border-bottom pb-2">{{this.nombre}}</h4>
                <div class="row">
                    {{#each this.productos}}
                    <div class="col-md-6 mb-3">
                        <div class="card h-100">
                            <img src="{{this.imagen}}" class="card-img-top" alt="{{this.nombre}}" style="height: 150px; object-fit: cover;">
                            <div class="card-body">
                                <h5 class="card-title">{{this.nombre}}</h5>
                                <p class="card-text">{{this.descripcion}}</p>
                                <p class="text-end fw-bold">RD$ {{this.precio}}</p>
                            </div>
                            <div class="card-footer bg-white">
                                {{#if (lookup ../productosEnCarrito @index)}}
                                <button class="btn btn-danger w-100" disabled>
                                    En el carrito
                                </button>
                                {{else}}
                                <form action="/cliente/comercios/{{../comercio.id}}/agregar-producto" method="POST">
                                    <input type="hidden" name="id_producto" value="{{this.id}}">
                                    <button type="submit" class="btn btn-success w-100">
                                        <i class="fas fa-plus"></i> Agregar
                                    </button>
                                </form>
                                {{/if}}
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
            {{/each}}
        </div>

        <div class="col-md-4">
            <div class="card sticky-top" style="top: 20px;">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Mi Pedido</h5>
                </div>
                <div class="card-body">
                    {{#if productosEnCarrito.length}}
                    <ul class="list-group list-group-flush mb-3">
                        {{#each productosEnCarrito}}
                        <li class="list-group-item d-flex justify-content-between">
                            <span>{{this.nombre}} x{{this.cantidad}}</span>
                            <span>RD$ {{multiply this.precio this.cantidad}}</span>
                        </li>
                        {{/each}}
                    </ul>
                    <div class="d-grid gap-2">
                        <a href="/cliente/comercios/{{comercio.id}}/confirmar" class="btn btn-primary">
                            Continuar
                        </a>
                    </div>
                    {{else}}
                    <div class="text-center py-4">
                        <i class="fas fa-shopping-cart fa-3x text-muted mb-3"></i>
                        <p class="text-muted">Tu pedido está vacío</p>
                    </div>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</div>

{{> footer }}