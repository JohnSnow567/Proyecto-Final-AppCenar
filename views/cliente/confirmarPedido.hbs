<div class="container mt-4" style="max-width:600px;">
  <h2 class="mb-4">Confirmar Pedido</h2>

  {{!-- Lista de productos --}}
  <div class="card mb-4">
    <div class="card-header"><h5>Productos</h5></div>
    <ul class="list-group list-group-flush">
      {{#each carrito}}
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <div>
            <strong>{{producto.nombre}}</strong><br>
            <small>RD$ {{producto.precio}} x {{cantidad}}</small>
          </div>
          <span>RD$ {{multiply producto.precio cantidad}}</span>
        </li>
      {{/each}}
    </ul>
  </div>

  {{!-- Selección de dirección --}}
  <div class="card mb-4">
    <div class="card-header"><h5>Dirección de envío</h5></div>
    <div class="card-body">
      <form id="form-confirm" action="/cliente/carrito/confirmar" method="POST">
        <div class="mb-3">
          <label for="id_direccion" class="form-label">Elige una dirección</label>
          <select name="id_direccion" id="id_direccion" class="form-control" required>
            {{#each direcciones}}
              <option value="{{id}}">{{nombre}} — {{descripcion}}</option>
            {{/each}}
          </select>
        </div>

        {{!-- Resumen de montos --}}
        <div class="mb-3">
          <div class="d-flex justify-content-between">
            <span>Subtotal:</span>
            <span>RD$ {{subtotal}}</span>
          </div>
          <div class="d-flex justify-content-between">
            <span>ITBIS ({{configuracion.itbis}}%):</span>
            <span>RD$ {{itbisAmount}}</span>
          </div>
          <hr>
          <div class="d-flex justify-content-between fw-bold">
            <span>Total:</span>
            <span>RD$ {{totalWithItbis}}</span>
          </div>
        </div>

        <button type="submit" class="btn btn-success w-100">
          <i class="fas fa-check mr-2"></i>Confirmar Pedido
        </button>
      </form>
    </div>
  </div>
</div>
