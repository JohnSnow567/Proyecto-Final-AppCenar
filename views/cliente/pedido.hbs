{{> header title="Mis Pedidos" }}

<div class="container mt-4">
    <h2 class="mb-4">Mis Pedidos</h2>
    
    {{#if pedidos.length}}
    <div class="list-group">
        {{#each pedidos}}
        <a href="/cliente/pedidos/{{this.id}}" class="list-group-item list-group-item-action">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <img src="{{this.comercio.logo}}" alt="{{this.comercio.nombre_comercio}}" width="50" class="me-3">
                    <span class="badge bg-{{#if (eq this.estado 'pendiente')}}warning{{else if (eq this.estado 'en proceso')}}primary{{else}}success{{/if}}">
                        {{this.estado}}
                    </span>
                </div>
                <div>
                    <h5 class="mb-1">{{this.comercio.nombre_comercio}}</h5>
                    <small>{{formatDate this.fecha_hora}}</small>
                </div>
                <div class="text-end">
                    <p class="mb-1">RD$ {{this.total}}</p>
                    <small>{{this.cantidadProductos}} productos</small>
                </div>
            </div>
        </a>
        {{/each}}
    </div>
    {{else}}
    <div class="alert alert-info">
        No tienes pedidos realizados.
    </div>
    {{/if}}
</div>

{{> footer }}